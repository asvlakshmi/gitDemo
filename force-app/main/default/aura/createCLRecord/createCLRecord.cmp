<aura:component controller ="createCheckListRecord">
	<aura:attribute name="checklistobj" type="Checklist__c" default = "{'sobjectType' :'Checklist__c','Name' : ''
                                                                       ,'Type__c' :''}"/>
    <aura:attribute name = "checklistobjid" type="string"/>
    <aura:attribute name="checklistrecords" type="Checklist__c[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.showCheckLists}"/>
    <lightning:input value ="{!v.checklistobj.Name}" label = "Name"/>
    <lightning:input value ="{!v.checklistobj.Type__c}" label = "Type"/>
    <lightning:button variant="brand" label="Save" title = "Save" onclick="{c.doSave}"/>
     <table class = "slds-table slds-table_ceil-buffer slds-table_bordered">
        <thead>
        <tr>
        <th class="slds-text-title_caps" scope="col">
        <div class="slds-truncate" title="name"> Name</div>
        </th>
        
        <th class="slds-text-title_caps" scope="col">
        <div class="slds-truncate" title="type">Type </div>
        </th>
        </tr>
        </thead>
        
        <tbody>
        <aura:iteration items="{!v.checklistrecords}" var="checkListObj" indexVar="index">
            <tr>
            <td data-label="Name" scope="row">
            <div class="slds-truncate" title="Name">{!checkListObj.Name} </div>
            </td>
            <td data-label="Type">
            <div class="slds-truncate" title="Type">{!checkListObj.type__c} </div>
            </td>
            </tr>
        </aura:iteration>
        </tbody>
        </table>
        </aura:component>